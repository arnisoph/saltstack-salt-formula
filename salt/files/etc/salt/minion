{# Idea of defining a macro stolen from https://github.com/saltstack-formulas/salt-formula/ -#}
{%- macro set_setting(settingname) -%}
{%- if settingname in salt_map['minion']['config'] -%}
{{ settingname }}: {{ salt_map['minion']['config'][settingname] }}
{%- endif -%}
{%- endmacro -%}
